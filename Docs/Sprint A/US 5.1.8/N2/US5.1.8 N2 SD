@startuml US8_Nivel1
autonumber

actor "<<Admin>>\nAdmin" as admin
participant "<<Component>>\nWeb" as web
participant "BE" as be

activate admin
    admin -> web : wants to create a patient profile
    activate web
        web --> admin : request patient data
        admin -> web : provides patient data
        web -> be : POST /patients
        activate be
            alt patient profile not created
                be --> web : 422: Unprocessable Content
            else patient profile created successfully
                be --> web : 201: Created
            end
        deactivate be
    
    web --> admin : shows result
    deactivate web
deactivate admin

@enduml
